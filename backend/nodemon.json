{
  "watch": ["src"],
  "ext": ".ts, .js",
  "exec": "ts-node ./src/server.ts",
  "execMap": {
    "ts": "ts-node --transpileOnly"
  },
  "ts-node": {
    "swc": true
  },
  "verbose": true,
  "legacy-watch": true,
  "ignore": ["node_modules", "dist"],
  "color": true,
  "restartable": "rs",
  "timestamp": "YYYY-MM-DD HH:mm:ss",
  "signal": "SIGINT",
  "restartDelay": 1000,
  "eslintConfig": {
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    }
  }
}